{
  "name": "meal-tracker",
  "version": "1.0.0",
  "description": "A modern desktop app to track daily meals",
  "author": "Meal Tracker Team",
  "main": "build/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "start-renderer": "react-scripts start",
    "build": "react-scripts build",
    "build-electron": "npm run build && npm run copy-electron && electron-builder",
    "dist": "npm run build && npm run copy-electron && electron-builder --publish=never",
    "copy-electron": "node scripts/copy-electron.js",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
